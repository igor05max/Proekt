<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Photo">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Аватарка"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:gravity="center"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/boy_1_layout"
            android:layout_width="114dp"

            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/boy_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/boy_level_0" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="новичок"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boy_2_layout"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/boy_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/boy_level_2" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="мастер"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boy_3_layout"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/boy_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/boy_level_1" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="продвинутый"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/girl_1_layout"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/girl_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/girl_level_0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="новичок"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/girl_2_layout"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/girl_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/girl_level_1" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="продвинутый"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/girl_3_layout"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical"
           >
            <ImageView
                android:id="@+id/girl_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/girl_level_2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="мастер"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Выберете уровень знания математики"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"></TextView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/buttonPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            />
    </LinearLayout>
</LinearLayout>
